<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/cadastrar_estabelecimento_titulo"
        android:id="@+id/tvCadastrarEstabelecimento"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/primary_text_light" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etCadastrarEstabelecimento"
        android:layout_gravity="center_horizontal"
        android:inputType="textCapCharacters"
        android:layout_margin="10dp"
        android:hint="ex.: A1B2C3"
        android:textColor="@android:color/primary_text_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cadastrar_estabelecimento_button"
        android:id="@+id/btnCadastrarEstabelecimento"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
